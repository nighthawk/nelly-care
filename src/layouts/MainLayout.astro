---
// layouts/MainLayout.astro
const { title } = Astro.props;

import nellyLogo from "../assets/logo.png";

const emailAddress = "contact@nelly.care";
const emailSubject = "Enquiry about Nelly's Adventures";
const emailLink = `mailto:${emailAddress}?subject=${encodeURIComponent(emailSubject)}`;
const bookingLink = "https://nellysadventures.setmore.com";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      /* CSS Reset */
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html,
      body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family:
          system-ui,
          -apple-system,
          sans-serif;
      }
    </style>
  </head>
  <body>
    <div class="site-wrapper">
      <header>
        <div class="header-content">
          <div class="logo">
            <a href="/"
              ><img
                src={nellyLogo.src}
                alt="Nelly's Adventures Logo"
                style="width:70px"
              /></a
            >
            <p class="tagline">"Fun-filled learning in the great outdoors"</p>
          </div>

          <nav class="nav-links">
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/faq">FAQ</a>
            <a href="/pricing">Pricing</a>
            <a href={bookingLink} class="book-btn">Book</a>
            <a href="https://www.gofundme.com/f/kids-connect-with-nature-and-thrive-outdoors">Support</a>
          </nav>
        </div>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        <div class="footer-content">
          <p>Nelly's Adventures</p>
          <p><a href="mailto:contact@nelly.care">contact@nelly.care</a></p>
          <p>ABN: 40 665 200 517</p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  .site-wrapper {
    background-color: #8fba5f;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    background-color: #8fba5f;
    padding: 1rem 0;
  }

  .header-content,
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .tagline {
    font-style: italic;
    color: #333;
  }

  .menu-btn {
    background-color: #f5e6d3;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
  }

  .nav-links a {
    background-color: #f5e6d3;
    color: #8fba5f;
    border: none;
    padding: 0.8rem 2rem;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    text-decoration: none;
    display: inline-block;
    margin-left: 1rem;
    width: 120px; /* Ensure all links have the same width */
    text-align: center;
  }

  .nav-links a:hover {
    background-color: #e4d5c2;
  }

  .nav-links a.book-btn {
    background-color: #ffcc00;
    color: #333;
  }

  .nav-links a.book-btn:hover {
    background-color: #e6b800;
  }

  @media (max-width: 900px) {
    .nav-links a {
      padding: 1rem 1rem; /* Add vertical padding on smaller devices */
      margin-left: 0;
      margin-bottom: 0.5rem;
    }
  }

  main {
    flex: 1;
    width: 100%;
  }

  footer {
    background-color: #8fba5f;
    padding: 1rem 0;
    margin-top: auto;
  }

  .footer-content p {
    margin: 0.2rem 0;
    color: #333;
  }
</style>
